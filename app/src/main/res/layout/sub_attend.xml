<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/card_sub"
        android:layout_width="180dp"
        android:layout_height="330dp"
        android:background="@drawable/hour_card"
        android:elevation="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Algorithm Design And Analysis"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:id="@+id/title"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="CODE"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:id="@+id/subcode"
            android:layout_below="@+id/title"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Total percentage:75%"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:id="@+id/total"
            android:layout_below="@+id/subcode"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Max. Hours:75%"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_below="@+id/total"
            android:id="@+id/maxhr"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Att. Hours:75%"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:id="@+id/atthr"
            android:layout_below="@+id/maxhr"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Absent Hours:75%"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:id="@+id/abshr"
            android:layout_below="@+id/atthr"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Avg. percent:75%"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_below="@+id/abshr"
            android:id="@+id/avg_percent"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="OD/ML Percent:75%"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:id="@+id/od_percent"
            android:layout_below="@+id/avg_percent"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"/>


        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="OD/ML Percent:75%"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:id="@+id/alert"
            android:layout_below="@+id/od_percent"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:textSize="17dp"/>
    </RelativeLayout>

</RelativeLayout>
