<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/evar_bg3"
    tools:context="org.viciousanddelicious.viciousdelicious.evarsity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EVARSITY"
        android:textSize="45dp"
        android:textStyle="bold"
        android:textColor="#81D4FA"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="95dp"
        android:id="@+id/evar"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/evar"
        android:layout_marginLeft="160dp"
        android:text="Login"
        android:textSize="23dp"
        android:id="@+id/log"
        android:textColor="#0288D1"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="45dp"
        android:layout_below="@id/log"
        android:layout_marginTop="100dp"
        android:background="@drawable/crack"
        android:backgroundTint="#81D4FA"
        android:layout_marginLeft="40dp"
        android:id="@+id/reg_image"/>

    <EditText
        android:layout_width="290dp"
        android:layout_height="45dp"
        android:layout_below="@id/log"
        android:layout_toRightOf="@id/reg_image"
        android:layout_marginTop="100dp"
        android:textColor="#B0BEC5"
        android:hint="Enter your registration number"
        android:layout_marginLeft="30dp"
        android:id="@+id/reg"
        android:elevation="20dp"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="45dp"
        android:layout_below="@id/reg_image"
        android:layout_marginTop="20dp"
        android:background="@drawable/crack"
        android:backgroundTint="#81D4FA"
        android:layout_marginLeft="40dp"
        android:id="@+id/pass_image"/>

    <EditText
        android:layout_width="290dp"
        android:layout_height="45dp"
        android:layout_below="@id/reg"
        android:layout_toRightOf="@id/pass_image"
        android:layout_marginTop="20dp"
        android:hint="Enter your password"
        android:layout_marginLeft="30dp"
        android:id="@+id/pass"
        android:elevation="20dp"
        android:textColor="#B0BEC5"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@id/pass"
        android:layout_marginTop="30dp"
        android:background="@drawable/crack"
        android:backgroundTint="#81D4FA"
        android:layout_marginLeft="130dp"
        android:id="@+id/login_image"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pass"
        android:layout_marginTop="40dp"
        android:text="login"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginLeft="10dp"
        android:textSize="22dp"
        android:textColor="#81D4FA"
        android:textStyle="italic"
        android:id="@+id/loge"
        android:layout_toRightOf="@id/login_image"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Skip"
        android:textSize="23dp"
        android:textColor="#81D4FA"
        android:id="@+id/skip"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"/>

</RelativeLayout>
