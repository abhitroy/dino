<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.viciousanddelicious.viciousdelicious.attendence">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:elevation="30dp"
        android:id="@+id/attend_total">
    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:indeterminate="false"
        android:layout_marginTop="10dp"
        android:max="100"
        android:progress="50"
        android:progressBackgroundTint="#FFFFFF"
        android:progressDrawable="@drawable/circle_shape"
        />

        <TextView
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:text="Total percentage is:75%"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:textStyle="bold"/>
</LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="16dp"
        android:divider="@android:color/transparent"
        android:id="@+id/list_of_attendence"
        android:layout_below="@+id/attend_total"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"/>
</RelativeLayout>
